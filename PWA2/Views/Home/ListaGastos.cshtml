@model IEnumerable<GastosComCategoria>

@{
    ViewData["Title"] = "Lista de Gastos";
}

<h2>Lista de Gastos</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Valor</th>
            <th>Data</th>
            <th>Categoria</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var gasto in Model)
        {
            <tr>
                <td>@gasto.Nome</td>
                <td>@gasto.Valor</td>
                <td>@gasto.Data.ToString("dd/MM/yyyy")</td>
                <td>@gasto.CategoriaNome</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@gasto.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Excluir" asp-route-id="@gasto.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
