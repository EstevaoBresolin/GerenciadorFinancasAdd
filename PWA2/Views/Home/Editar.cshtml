                @model GastosGenericos

@{
    ViewData["Title"] = "Editar Gasto";
}

<div class="text-center">
    <h1>Editar Gasto</h1>
</div>
<br />

<form asp-action="Editar" asp-route-id="@Model.Id" method="post" class="form">
    <label>Nome</label>
    <input type="text" name="Nome" value="@Model.Nome" placeholder="Digite o nome" required />

    <label>Valor</label>
    <input type="number" name="Valor" value="@Model.Valor" placeholder="Digite o valor" required />


    <div class="mb-3">
        <label class="form-label">Categoria</label>
        <select class="form-select input" disabled>
            <option value="@Model.IDCategoria" selected>@Model.Categoria.Nome</option>
        </select>
    </div>

    <input type="hidden" name="Data" value="@Model.Data" /> <!-- Campo oculto para Data -->

    <input type="submit" value="Salvar" />
    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Voltar</a>
</form>

<style>
    .form {
        display: flex;
        flex-direction: column;
        padding: 1rem;
        border: 1px solid red;
    }

    input {
        width: 35%;
    }
</style>
